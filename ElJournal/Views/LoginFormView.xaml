<Window x:Class="ElJournal.Views.LoginFormView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ElJournal.Views"
        xmlns:other="clr-namespace:ElJournal.Other"
        xmlns:vm="clr-namespace:ElJournal.ViewModels"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="LoginFormView"
        Height="475px" 
        Width="500px"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None">
    <Window.DataContext>
        <vm:LoginFormViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="35px"/>
                <RowDefinition Height="156px"/>
                <RowDefinition Height="50px"/>
                <RowDefinition Height="60px"/>
                <RowDefinition Height="60px"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <TextBlock
                Grid.Row="0"
                Margin="15 0 0 0"
                FontSize="15"
                FontWeight="Bold"
                HorizontalAlignment="Left"
                VerticalAlignment="Center">
                ElJournal
            </TextBlock>
            <StackPanel
                Grid.Row="0"
                Orientation="Horizontal"
                VerticalAlignment="Center"
                HorizontalAlignment="Right">
                <Button
                    Style="{StaticResource MaterialDesignFlatButton}"
                    Command="{Binding MinimizeWindow}">
                    <materialDesign:PackIcon 
                        Kind="Minus"/>
                </Button>
                <Button
                    Style="{StaticResource MaterialDesignFlatButton}"
                    Command="{Binding CloseApp}">
                    <materialDesign:PackIcon 
                        Kind="Close"/>
                </Button>
            </StackPanel>
            <Image
                Grid.Row="1"
                HorizontalAlignment="Center"
                MinWidth="201px" 
                Source="/Resources/Images/ggpk.png"
                />
            <TextBlock
                Grid.Row="2"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="30">
                Авторизация
            </TextBlock>
            <TextBox
                Grid.Row="3"
                x:Name="LoginTextBox"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Width="300px"
                MinWidth="150px"
                FontSize="18"
                materialDesign:HintAssist.Hint="Логин"
                Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                Text="{Binding Login}"/>
            <PasswordBox
                Grid.Row="4"
                x:Name="PassTextBox"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Width="300px"
                MinWidth="150px"
                other:PasswordBoxAssistant.BindPassword="True"
                FontSize="18"
                materialDesign:HintAssist.Hint="Пароль"
                Style="{StaticResource MaterialDesignFloatingHintPasswordBox}">
                <other:PasswordBoxAssistant.BoundPassword>
                    <Binding Mode="TwoWay" Path="Password">
                    </Binding>
                </other:PasswordBoxAssistant.BoundPassword>
            </PasswordBox>
            <Button 
                x:Name="SignInButton"
                Grid.Row="5"
                Width="250px"
                FontSize="18"
                IsEnabled="{Binding IsLoginEnabled}"
                Command="{Binding LoginUser}">
                Войти
            </Button>
        </Grid>
    </Grid>
</Window>
