<UserControl x:Class="ElJournal.Views.AdminControlViews.GroupsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ElJournal.Views.AdminControlViews"
             xmlns:vm="clr-namespace:ElJournal.ViewModels.AdminControlViewModels"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="450" 
             d:DesignWidth="650"
             Background="White">
    <UserControl.DataContext>
        <vm:GroupsViewModel/>
    </UserControl.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50px"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50px"/>
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="425px"/>
            </Grid.ColumnDefinitions>
            <StackPanel
                Grid.Column="0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <Border
                    BorderThickness="2"
                    BorderBrush="LightGray"
                    CornerRadius="3"
                    Padding="5"
                    Margin="15 0 0 0">
                    <StackPanel 
                        Orientation="Horizontal">
                        <materialDesign:PackIcon 
                            Kind="Magnify"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"/>
                        <TextBox 
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Width="150px"
                            Margin="5 0 0 0"
                            Text="{Binding Filter, UpdateSourceTrigger=PropertyChanged}"
                            materialDesign:HintAssist.Hint="Поиск..."
                            materialDesign:TextFieldAssist.DecorationVisibility="Hidden"/>
                    </StackPanel>
                </Border>
            </StackPanel>
            <StackPanel
                Grid.Column="2"
                Orientation="Horizontal">
                <Button
                    Margin="10 0 0 0"
                    Command="{Binding AddGroup}"
                    Style="{StaticResource MaterialDesignFlatLightBgButton}">
                    <StackPanel 
                        Orientation="Horizontal">
                        <materialDesign:PackIcon 
                            Kind="Plus"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"/>
                        <TextBlock 
                            Text="Добавить"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Margin="5 0 0 0"/>
                    </StackPanel>
                </Button>
                <Button
                    Margin="15 0 0 0"
                    Command="{Binding DeleteGroup, UpdateSourceTrigger=PropertyChanged}"
                    Style="{StaticResource MaterialDesignFlatLightBgButton}">
                    <StackPanel 
                        Orientation="Horizontal">
                        <materialDesign:PackIcon 
                            Kind="Trash"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"/>
                        <TextBlock 
                            Text="Удалить"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Margin="5 0 0 0"/>
                    </StackPanel>
                </Button>
                <Button 
                    Margin="15 0 0 0"
                    Command="{Binding EditGroup}"
                    Style="{StaticResource MaterialDesignFlatLightBgButton}">
                    <StackPanel 
                        Orientation="Horizontal">
                        <materialDesign:PackIcon 
                            Kind="Edit"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"/>
                        <TextBlock 
                            Text="Редактировать"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Margin="5 0 0 0"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>
        <Grid
            Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="425px"/>
            </Grid.ColumnDefinitions>
            <StackPanel
                Grid.Column="1"
                Orientation="Horizontal"
                VerticalAlignment="Center">
                <Button
                    Margin="10 0 15 0"
                    Command="{Binding AddSubject}"
                    Style="{StaticResource MaterialDesignFlatLightBgButton}">
                    <StackPanel
                        Orientation="Horizontal">
                        <materialDesign:PackIcon 
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Kind="AccountMultipleAdd"/>
                        <TextBlock 
                            Margin="5 0 0 0"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Text="Добавить предмет"/>
                    </StackPanel>
                </Button>
                <Button
                    Command="{Binding OpenSubjectsDialog}"
                    Style="{StaticResource MaterialDesignFlatLightBgButton}">
                    <StackPanel
                        Orientation="Horizontal">
                        <materialDesign:PackIcon 
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Kind="CardSearch"/>
                        <TextBlock 
                            Margin="5 0 0 0"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Text="Просмотреть предметы"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>
        <DataGrid
            Grid.Row="1"
            CanUserAddRows="False"
            ItemsSource="{Binding FilteredList, UpdateSourceTrigger=PropertyChanged}"
            AutoGenerateColumns="False"
            CanUserDeleteRows="False"
            HorizontalScrollBarVisibility="Auto"
            VerticalScrollBarVisibility="Disabled"
            SelectedItem="{Binding SelectedGroup}">
            <DataGrid.Columns>
                <materialDesign:DataGridTextColumn 
                    Header="ID"
                    IsReadOnly="True"
                    Binding="{Binding GroupID}"/>
                <materialDesign:DataGridTextColumn
                    Header="Название группы"
                    Width="500"
                    IsReadOnly="True"
                    Binding="{Binding Name}"/>
                <materialDesign:DataGridTextColumn
                    Header="Курс"
                    IsReadOnly="True"
                    Width="*"
                    Binding="{Binding Course}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
