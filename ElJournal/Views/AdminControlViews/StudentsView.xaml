<UserControl x:Class="ElJournal.Views.AdminControlViews.StudentsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ElJournal.Views.AdminControlViews"
             xmlns:vm="clr-namespace:ElJournal.ViewModels.AdminControlViewModels"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="450" 
             d:DesignWidth="650"
             Background="White">
    <UserControl.DataContext>
        <vm:StudentsViewModel/>
    </UserControl.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50px"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="425px"/>
            </Grid.ColumnDefinitions>
            <StackPanel
                Grid.Column="0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <Border
                    BorderThickness="2"
                    BorderBrush="LightGray"
                    CornerRadius="3"
                    Padding="5"
                    Margin="15 0 0 0">
                    <StackPanel 
                        Orientation="Horizontal">
                        <materialDesign:PackIcon 
                            Kind="Magnify"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"/>
                        <TextBox 
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Width="150px"
                            Margin="5 0 0 0"
                            Text="{Binding Filter}"
                            materialDesign:HintAssist.Hint="Поиск..."
                            materialDesign:TextFieldAssist.DecorationVisibility="Hidden"/>
                    </StackPanel>
                </Border>
            </StackPanel>
            <StackPanel
                Grid.Column="1"
                Orientation="Horizontal">
                <Button
                    Margin="10 0 0 0"
                    Command="{Binding AddStudent}">
                    <StackPanel 
                        Orientation="Horizontal">
                        <materialDesign:PackIcon 
                            Kind="Plus"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"/>
                        <TextBlock 
                            Text="Добавить"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Margin="5 0 0 0"/>
                    </StackPanel>
                </Button>
                <Button
                    Margin="15 0 0 0"
                    Command="{Binding DeleteStudents}">
                    <StackPanel 
                        Orientation="Horizontal">
                        <materialDesign:PackIcon 
                            Kind="Trash"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"/>
                        <TextBlock 
                            Text="Удалить"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Margin="5 0 0 0"/>
                    </StackPanel>
                </Button>
                <Button 
                    Margin="15 0 0 0"
                    Command="{Binding EditStudent}">
                    <StackPanel 
                        Orientation="Horizontal">
                        <materialDesign:PackIcon 
                            Kind="Edit"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"/>
                        <TextBlock 
                            Text="Редактировать"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Margin="5 0 0 0"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>
        <DataGrid
            Grid.Row="1"
            CanUserAddRows="False"
            AutoGenerateColumns="False"
            ItemsSource="{Binding FilteredList, UpdateSourceTrigger=PropertyChanged}">
            <DataGrid.Columns>
                <materialDesign:DataGridTextColumn 
                    Header="ID"
                    Binding="{Binding StudentID}"/>
                <materialDesign:DataGridTextColumn 
                    Header="Фамилия"
                    Width="150"
                    Binding="{Binding LastName}"/>
                <materialDesign:DataGridTextColumn 
                    Header="Имя"
                    Width="150"
                    Binding="{Binding FirstName}"/>
                <materialDesign:DataGridTextColumn 
                    Header="Отчество"
                    Width="150"
                    Binding="{Binding Patronymic}"/>
                <materialDesign:DataGridTextColumn 
                    Header="Группа"
                    Binding="{Binding GroupID}"/>
                <DataGridCheckBoxColumn 
                    Header="Удалить"
                    Width="*"
                    Binding="{Binding IsSelected, UpdateSourceTrigger=PropertyChanged}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
